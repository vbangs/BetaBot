<!DOCTYPE html>
<html lang="en">
    
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("partials/head") %>
    <nav>
        <a href="/climbs/new">Log a New Entry</a>
    </nav>
    <body>

        <!-- THE HEADER TAG PARTIAL -->
        <%- include("partials/header") %>
        <h1>Boulder Problems</h1>
        <ul>
            <% for(let i = 0; i < boulders.length; i++){ %>
                <li>
                    <img class="image" src="<%= boulders[i].url; %>" />
                    <br></br>
                    Name: <%=boulders[i].name; %> 
                    <br></br>
                    Grade: <%=boulders[i].grade; %>
                    <br></br>
                    Location: <%=boulders[i].location; %>
                    <br></br>
                </li>
            <% } %>
        </ul>
        <!-- THE HEAD TAG PARTIAL -->
        <%- include("partials/footer") %>
    </body>
</html>